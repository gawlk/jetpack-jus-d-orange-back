{
	"info": {
		"_postman_id": "3ce2b3cb-4108-4910-9532-05272dc1aec1",
		"name": "Jetpack API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create a jetpack",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "29cc937c-0294-49cd-ba3e-31f7b5f41eac",
						"exec": [
							"pm.globals.set('url', 'http://localhost:3000')"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "4cffee8b-566b-4c46-aa99-e2b76d4487bc",
						"exec": [
							"pm.test(\"Status code is 201\", () => {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"Response is JSON\", () => {",
							"    pm.response.json();",
							"});",
							"",
							"pm.test(\"JSON body has jetpack information\", () => {",
							"    const data = pm.response.json();",
							"    pm.expect(data.name).to.eql(\"Fortnite jetpack\");",
							"    pm.expect(data.image).to.eql(\"https://gamepedia.cursecdn.com/fortnite_gamepedia/e/e1/Jetpack_icon.png\");",
							"    pm.globals.set(\"jetpack.id\", data.id)",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"name\": \"Fortnite jetpack\",\n\t\"image\": \"https://gamepedia.cursecdn.com/fortnite_gamepedia/e/e1/Jetpack_icon.png\"\n}"
				},
				"url": {
					"raw": "{{url}}/jetpacks",
					"host": [
						"{{url}}"
					],
					"path": [
						"jetpacks"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get all jetpacks",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "29cc937c-0294-49cd-ba3e-31f7b5f41eac",
						"exec": [
							"pm.globals.set('url', 'http://localhost:3000')"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "4cffee8b-566b-4c46-aa99-e2b76d4487bc",
						"exec": [
							"pm.test(\"Status code is 200\", () => {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response is JSON\", () => {",
							"    pm.response.json();",
							"});",
							"",
							"pm.test(\"JSON body has an array\", () => {",
							"    pm.expect(pm.response.json()).to.be.an('array').but.not.an('object');",
							"});",
							"",
							"pm.test(\"Array contains the default jetpack\", () => {",
							"    const data = pm.response.json();",
							"",
							"    pm.expect(data[0].name).to.eql(\"Fortnite jetpack\");",
							"    pm.expect(data[0].image).to.eql(\"https://gamepedia.cursecdn.com/fortnite_gamepedia/e/e1/Jetpack_icon.png\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"type": "text",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": {
					"raw": "{{url}}/jetpacks",
					"host": [
						"{{url}}"
					],
					"path": [
						"jetpacks"
					]
				}
			},
			"response": []
		}
	],
	"protocolProfileBehavior": {}
}